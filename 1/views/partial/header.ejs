<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    
    <style>
        /* font */
        @font-face {
            font-family: Samim;
            src: url('http://fonts.codearena.ir/rastikerdar/samim/samim.eot');
            src: url('http://fonts.codearena.ir/rastikerdar/samim/samim.eot?#iefix') format('embedded-opentype'),
                url('http://fonts.codearena.ir/rastikerdar/samim/samim.woff') format('woff'),
                url('http://fonts.codearena.ir/rastikerdar/samim/samim.ttf') format('truetype');
            font-weight: normal;
        }

        * {
            font-family: samim;
            box-sizing: border-box;
            direction: rtl;
            outline: none;
            margin: 0;
            padding: 0;
        }

        body {
            background-color: #eee;
        }

        .navigation {
            list-style-type: none;
            padding: 0;
            overflow: hidden;
            background-color: #222;
            box-shadow: 0 3px 10px 0 rgba(0, 0, 0, 0.4);
        }

        .navigation>li {
            float: right;
        }

        .navigation>li>a {
            display: block;
            text-decoration: none;
            color: #fff;
            padding: 18px 15px;
            font-size: 1.05rem;
        }

        .navigation>li>a>i {
            padding-left: 6px;
        }

        .navigation>li:first-child>a {
            padding: 18px;
        }

        .navigation>li>a:hover {
            background-color: dodgerblue;
            transition: 0.6s;
        }

        .navigation li a.active {
            background-color: dodgerblue;
        }

        .search-bar {
            float: left;
            padding: 15px 15px;
            overflow: hidden;
        }

        .search-bar input{
            padding: 5px 12px;
            border: none;
            border-radius: 4px;
            font-size: 0.8rem;
        }
        .search-bar button{
            padding: 5px 12px 5px 12px;
            border: none;
            border-radius: 4px;
            font-size: 0.8rem;
            background-color: dodgerblue;
            color: #fafafa;
            overflow: hidden;
            cursor: pointer;
        }
        .search-bar button:hover{
        background-color: rgb(0, 113, 226);
        transition: 0.3s;
        }
    </style>
</head>
<header>
    <ul class="navigation">
        <li><a href="/home" id="home">
            <i class="fas fa-home"></i>
            خانه
        </a></li>
        <li><a href="/about" id="about">
            <i class="fas fa-users"></i>
            درباره ما
        </a></li>
        <li><a href="/contact" id="contact">
            <i class="fas fa-address-card"></i>
            تماس با ما
        </a></li>
        
        <form action="/home" class="search-bar">
            <input name="search" type="text" placeholder="جستجو" class="search">
            <button type="submit"><i class="fas fa-search"></i></button>
        </form>
    </ul>
    
</header>